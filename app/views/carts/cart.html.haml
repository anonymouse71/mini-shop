                -#    %td.CartProductThumb
                -#      %div
                -#        %a{:href => '#'}
                -#          <img ng-src="{{ item.image }}">
                -#    %td
                -#      .CartDescription
                -#        %h4
                -#          %a{:href => '#'} {{ item.name }}
                -#        -#%span.size 12 x 1.5 L
                -#        .price
                -#          %span
                -#            BDT {{ item.price }}
                -#    %td.delete
                -#      %a{'ng-click' => 'removeItem(item.id)', :title => "Delete"}
                -#        %i.glyphicon.glyphicon-trash.fa-2x
                -#
                -#    %td
                -#      %input.quanitySniper.form-control{:name => "quanitySniper", :type => "text", :value => '9'}
                -#
                -#    %td 0
                -#    %td.price
                -#      BDT {{ item.price * item.quantity }}
          / cartContent
          .cartFooter.w100
            .box-footer
              .pull-left
                %a.btn.btn-default{:href => '/'}
                  %i.fa.fa-arrow-left
                  \&nbsp; Continue shopping
              .pull-right
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-undo
                  \&nbsp; Update cart

    .col-lg-3.col-md-3.col-sm-5.rightSidebar
      = render :partial => 'checkout_sidebar'

  %div{:style => "clear:both"}
.gap